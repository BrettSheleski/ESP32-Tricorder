<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             IsPresented="{Binding IsMenuDisplayed}"
             x:Class="Tricorder.Mobile.Views.TricorderPage">
    <MasterDetailPage.Resources>
        <ResourceDictionary>
            <Color x:Key="lcarsTitleYellowBg" >#FFAC04</Color>
            <Color x:Key="lcarsTitleTextColor">#8180C2</Color>
        </ResourceDictionary>
    </MasterDetailPage.Resources>
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <Label Text="Available Devices" HorizontalTextAlignment="End" />
                <ListView ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding CurrentDevice}" 
                          IsPullToRefreshEnabled="True"
                          IsRefreshing="{Binding IsUpdatingDeviceList}"
                          RefreshCommand="{Binding UpdateDeviceListCommand}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage Title="Tricorder">
            <x:Arguments>
                <ContentPage Title="{Binding Title}" NavigationPage.HasNavigationBar="False">
                    <Grid>
                        <Label Text="{Binding Fart}" FontSize="256"  VerticalOptions="Center" HorizontalTextAlignment="Center" />
                        <Grid WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" VerticalOptions="Start" Margin="15">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowMenuCommmand}" />
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Frame Grid.Row="0" BorderColor="DarkGray" CornerRadius="5" HeightRequest="10" />
                            <Frame Grid.Row="1" BorderColor="DarkGray" CornerRadius="5" HeightRequest="10" />
                            <Frame Grid.Row="2" BorderColor="DarkGray" CornerRadius="5" HeightRequest="10" />
                        </Grid>
                    </Grid>
                    
                </ContentPage>
            </x:Arguments>
        </NavigationPage>

    </MasterDetailPage.Detail>
</MasterDetailPage>